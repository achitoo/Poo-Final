<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd">

<!-- 
Controllers doc: 
https://www.openxava.org/OpenXavaDoc/docs/controllers_en.html

Default controllers included in OpenXava (you can extend from them):
https://github.com/openxava/openxava/blob/master/openxava/src/main/resources/xava/default-controllers.xml
 
Examples of controllers (from test application):
https://github.com/openxava/openxava/blob/master/openxavatest/src/main/resources/xava/controllers.xml
-->

<controllers>

    <!-- Pedido -->
    <controller name="PedidoPersonalizado">

        <action name="recalcularTotal"
                class="com.servifabrik.servifabrik.actions.RecalcularTotalPedidoAction"
                mode="detail"
                icon="calculate"
                label="Recalcular total" />

        <action name="confirmarPedido"
                class="com.servifabrik.servifabrik.actions.ConfirmarPedidoAction"
                mode="detail"
                icon="check_circle"
                label="Confirmar pedido" />
    </controller>


    <!-- Detalle Pedido -->
    <controller name="DetallePedidoPersonalizado">

        <action name="calcularSubtotal"
                class="com.servifabrik.servifabrik.actions.CalcularSubtotalDetalleAction"
                mode="detail"
                icon="calculate"
                label="Calcular subtotal" />

        <action name="validarStock"
                class="com.servifabrik.servifabrik.actions.ValidarStockDetalleAction"
                mode="detail"
                icon="check_circle"
                label="Validar stock" />
    </controller>


    <!-- Inventario -->
    <controller name="InventarioPersonalizado">

        <action name="reponerInventario"
                class="com.servifabrik.servifabrik.actions.ReponerInventarioAction"
                mode="detail"
                icon="add_circle"
                label="Reponer inventario" />
    </controller>


    <!-- Pago -->
    <controller name="PagoPersonalizado">

        <action name="calcularCambio"
                class="com.servifabrik.servifabrik.actions.CalcularCambioPagoAction"
                mode="detail"
                icon="payments"
                label="Calcular cambio" />
    </controller>

</controllers>




