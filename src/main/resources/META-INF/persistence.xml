<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <!-- OJO: transaction-type="RESOURCE_LOCAL"  -->
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Deja que escanee todas tus entidades -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- Config JDBC a PostgreSQL -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/servifabrik"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>

            <!-- Dialecto de PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Crear/actualizar tablas automáticamente en desarrollo -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Opcional: para ver los SQL en consola -->
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

    <!-- Si quieres, deja la unidad junit como estaba o elimínala si no la usas -->
</persistence>
